@model DefensiveCodeDemo.ViewModels.HomeViewModels.HomeViewModel

<div class="row">
    <div class="col">
        <div class="form-group">
            <a class="btn btn-primary" href="/Order">New Order</a>
        </div>
    </div>
</div>
<table class="table table-striped">
    <tr>
        <th>Order Id</th>
        <th>Customer Id</th>
        <th>Total</th>
    </tr>
    @foreach (var item in Model.Payments)
    {
        <tr>
            <td>@item.OrderId</td>
            <td>@item.CustomerId</td>
            <td>$ @item.Total.ToString("#,##0.00")</td>
        </tr>
    }
</table>
